{% extends "layout" %}

{% block content %}
<h2> Saját virágaim </h2>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Virág neve</th>
      <th>Szerkesztés</th>
      <th>Törlés</th>
    </tr>
  </thead>
  <tbody>    
    {% for plant in plants %}
        <tr class="active">
            <td><a href="/plant/{{ plant.id }}">{{ plant.plantName }}</a></td>
            <td>
               <a href="/{{ plant.id }}/plantEdit" class="btn btn-primary">Szerkesztés</a> 
            </td>
            <td>
                <a href="/{{ plant.id }}/delete" class="btn btn-danger">Törlés</a>
            </td>
        </tr>
    {% endfor %}   
  </tbody>
</table> 

{% endblock %}