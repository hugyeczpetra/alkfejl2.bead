{% extends "layout" %}

{% block scripts %}
<script src="/scripts/popup_login.js"></script>
{% endblock %}

{% block content %}
<h2>Keresés</h2>

<form class="form-horizontal" method="post">
    {{ csrfField }}
  <div class="form-group">
    <label for="plantName" class="col-lg-2 control-label">Keresett virág</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="plantName" name="plantName" required>
    </div>
  </div>

  <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default" onclick="javascript:history.back()" >Mégsem</button>
      <button type="submit" class="btn btn-primary">Keresés</button>
      </div>
  </div>
</form>

{% endblock %}